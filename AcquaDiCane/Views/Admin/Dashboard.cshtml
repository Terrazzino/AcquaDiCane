@{
    // No usamos Layout, por lo que este archivo es una página HTML completa.
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Acqua Di Cane - Administrador</title>
    <link rel="stylesheet" href="~/css/admin-styles.css" asp-append-version="true">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <form id="logoutForm" method="post" action="/Account/Logout">
        @Html.AntiForgeryToken() @* Añade el token antiforja aquí *@
        <button class="btn-logout-fixed" type="submit" id="logoutButton">Cerrar Sesión</button>
    </form>
    <div class="admin-container">
        <h1 class="app-logo-outside">Acqua Di Cane</h1>
        <h2 class="admin-welcome-outside">Bienvenido, Administrador</h2>
        <main class="admin-main-menu">
            <button class="admin-menu-button" onclick="location.href='@Url.Action("Services", "Admin")'">Gestionar Servicios</button>
            <button class="admin-menu-button" onclick="location.href='@Url.Action("Groomers", "Admin")'">Gestionar Peluqueros</button>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/admin-scripts.js" asp-append-version="true"></script>
</body>
</html>