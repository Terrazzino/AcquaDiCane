@{
    Layout = null; // O tu layout compartido si tienes uno (ej. "_AdminLayout")
    ViewData["Title"] = "Acqua Di Cane - Gestionar Servicios";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/admin-styles.css" asp-append-version="true">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <form id="logoutForm" method="post" action="/Account/Logout">
        @Html.AntiForgeryToken()
        <button class="btn-logout-fixed" type="submit" id="logoutButton">Cerrar Sesión</button>
    </form>
    <div class="admin-container">
        <h1 class="app-logo-outside">Gestionar Servicios</h1>
        <main class="admin-content-area">
            <section class="service-form-section">
                <h3>Agregar Nuevo Servicio</h3>
                <form id="addServiceForm">
                    {{-- Añadido ID al formulario para manejar el submit --}}
                    <div class="input-group">
                        <label for="addServiceName">Nombre del Servicio:</label> {{-- ID ajustado para evitar conflictos --}}
                        <input type="text" id="addServiceName" name="Nombre" placeholder="Ej: Baño y Cepillado" required>
                    </div>
                    <div class="input-group">
                        <label for="addServiceDescription">Descripción:</label> {{-- Añadido --}}
                        <textarea id="addServiceDescription" name="Descripcion" rows="3" placeholder="Descripción del servicio"></textarea>
                    </div>
                    <div class="input-group">
                        <label for="addServicePrice">Precio ($):</label> {{-- ID ajustado --}}
                        <input type="number" id="addServicePrice" name="Precio" step="0.01" min="0" placeholder="Ej: 15000" required>
                    </div>
                    <div class="input-group">
                        <label for="addServiceDuration">Duración (minutos):</label> {{-- Añadido --}}
                        <input type="number" id="addServiceDuration" name="DuracionEnMinutos" min="5" step="5" placeholder="Ej: 60" required>
                    </div>
                    <button class="btn-primary" type="submit" id="addServiceButton">Agregar Servicio</button> {{-- Añadido type="submit" --}}
                </form>
            </section>

            <section>
                <h3>Servicios Existentes</h3>
                <table class="data-table" id="servicesTable">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Descripción</th> {{-- Nueva columna --}}
                            <th>Precio</th>
                            <th>Duración (min)</th> {{-- Nueva columna --}}
                            <th>Activo</th> {{-- Nueva columna --}}
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </section>

            <section class="selected-service-actions">
                <p>Servicio Seleccionado: <span id="selectedServiceName" class="selected-name-display">Ninguno</span></p>
                <div class="action-buttons-group">
                    <button class="btn-info" id="modifyServiceButton" disabled>Modificar</button>
                    <button class="btn-warning" id="deleteServiceButton" disabled>Eliminar</button>
                </div>
            </section>

            <div class="admin-actions-footer">
                <button class="btn-secondary" onclick="location.href='@Url.Action("Dashboard", "Admin")'">Volver al Menú Principal</button> {{-- Ajustado a Dashboard --}}
            </div>
        </main>
    </div>

    @* MODAL PARA MODIFICAR SERVICIO (EDITAR) *@
    <div class="modal-overlay" id="serviceModal">
        {{-- Este es el modal de edición --}}
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="serviceModalTitle">Modificar Servicio</h3> {{-- Título fijo para edición --}}
                <button class="close-modal-button" id="closeServiceModalButton">&times;</button>
            </div>
            <div class="modal-body">
                <form id="editServiceForm">
                    {{-- ID de formulario diferente para edición --}}
                    <input type="hidden" id="modalServiceId" name="Id" /> {{-- Para el ID del servicio a editar --}}
                    <div class="input-group">
                        <label for="modalEditServiceName">Nombre:</label> {{-- ID único para el input en el modal --}}
                        <input type="text" id="modalEditServiceName" name="Nombre" required>
                    </div>
                    <div class="input-group">
                        <label for="modalEditServiceDescription">Descripción:</label> {{-- Nuevo campo --}}
                        <textarea id="modalEditServiceDescription" name="Descripcion" rows="3"></textarea>
                    </div>
                    <div class="input-group">
                        <label for="modalEditServicePrice">Precio ($):</label> {{-- ID único --}}
                        <input type="number" id="modalEditServicePrice" name="Precio" required min="0" step="0.01">
                    </div>
                    <div class="input-group">
                        <label for="modalEditServiceDuration">Duración (minutos):</label> {{-- Nuevo campo --}}
                        <input type="number" id="modalEditServiceDuration" name="DuracionEnMinutos" min="5" step="5" required>
                    </div>
                    <div class="input-group">
                        {{-- Nuevo campo --}}
                        <input type="checkbox" id="modalEditServiceEstaActivo" name="EstaActivo" class="checkbox-style">
                        <label for="modalEditServiceEstaActivo">Servicio Activo</label>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn-primary">Guardar Cambios</button>
                        <button type="button" class="btn-secondary" id="cancelEditServiceModalButton">Cancelar</button> {{-- ID único --}}
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/admin-services-scripts.js" asp-append-version="true"></script>
</body>
</html>